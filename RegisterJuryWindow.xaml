<Window x:Class="EventsWPF_Practic.RegisterJuryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация жюри/модератора" Height="600" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Регистрация жюри/модератора" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="0,0,0,20"/>

        <StackPanel Grid.Column="0" Margin="0,50,20,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ID: " FontWeight="Bold"/>
                <TextBlock x:Name="GeneratedIdText"/>
            </StackPanel>

            <TextBlock Text="Фамилия:"/>
            <TextBox x:Name="LastNameBox"/>

            <TextBlock Text="Имя:"/>
            <TextBox x:Name="FirstNameBox"/>

            <TextBlock Text="Отчество:"/>
            <TextBox x:Name="MiddleNameBox"/>

            <TextBlock Text="Пол:"/>
            <ComboBox x:Name="GenderComboBox" DisplayMemberPath="GenderName"/>

            <TextBlock Text="Роль:"/>
            <ComboBox x:Name="RoleComboBox" DisplayMemberPath="RoleName"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailBox"/>

            <TextBlock Text="Телефон:"/>
            <TextBox x:Name="PhoneBox"/>

            <TextBlock Text="Направление:"/>
            <ComboBox x:Name="DirectionComboBox" DisplayMemberPath="DirectionName" IsEditable="True"/>

            <CheckBox x:Name="AttachEventCheckBox" Content="Прикрепить к мероприятию" Checked="AttachEventCheckBox_Checked" Unchecked="AttachEventCheckBox_Unchecked"/>

            <TextBlock Text="Мероприятие:"/>
            <ComboBox x:Name="EventComboBox" DisplayMemberPath="EventName" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20,50,0,0">
            <Image x:Name="ProfileImage" Height="150" Width="150" Margin="0,0,0,10" Stretch="UniformToFill"/>
            <Button Content="Выбрать фото" Click="SelectPhotoButton_Click" Width="120"/>

            <TextBlock Text="Пароль:" Margin="0,20,0,0"/>
            <Grid>
                <PasswordBox x:Name="PasswordBox" Visibility="Visible"/>
                <TextBox x:Name="PasswordTextBox" Visibility="Collapsed"/>
            </Grid>

            <TextBlock Text="Повторите пароль:"/>
            <Grid>
                <PasswordBox x:Name="ConfirmPasswordBox" Visibility="Visible"/>
                <TextBox x:Name="ConfirmPasswordTextBox" Visibility="Collapsed"/>
            </Grid>

            <CheckBox x:Name="ShowPasswordCheckBox"
                      Content="Показать пароль"
                      Checked="ShowPasswordCheckBox_Checked"
                      Unchecked="ShowPasswordCheckBox_Unchecked"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="Отмена" Click="CancelButton_Click" Margin="0,0,10,0" Width="80"/>
                <Button Content="ОК" Click="OkButton_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>