<Window x:Class="EventsWPF_Practic.OrganizerProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Профиль Организатора" Height="500" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Image x:Name="ProfilePhoto" Width="150" Height="200" Margin="0,0,10,0"/>
            <StackPanel>
                <TextBlock x:Name="DynamicGreetingText" FontSize="16"/>
                <!-- Динамическое приветствие -->
                <TextBlock x:Name="GreetingText" FontSize="14" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Имя:" Width="100"/>
                <TextBox x:Name="FirstNameBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Отчество:" Width="100"/>
                <TextBox x:Name="PatronymicBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Фамилия:" Width="100"/>
                <TextBox x:Name="SurnameBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Email:" Width="100"/>
                <TextBox x:Name="EmailBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Телефон:" Width="100"/>
                <TextBox x:Name="PhoneBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Дата рождения:" Width="100"/>
                <DatePicker x:Name="BirthDatePicker" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Страна:" Width="100"/>
                <TextBox x:Name="CountryBox" Width="200" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>