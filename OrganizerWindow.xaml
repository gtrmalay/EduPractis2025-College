<Window x:Class="EventsWPF_Practic.OrganizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно Организатора" Height="600" Width="600">
    <Grid Margin="20,20,20,-43">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
            <Image x:Name="UserPhoto" Width="150" Height="200" Margin="0,0,0,10"/>
            <Button x:Name="MyProfileButton" Content="Мой профиль" Click="MyProfileButton_Click" Width="120"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
            <TextBlock x:Name="GreetingTextBlock" FontSize="16" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <Button x:Name="PatronymicButton" Content="Мероприятия" Click="PatronymicButton_Click" Width="200" Height="50" Margin="0,0,0,10"/>
            <Button x:Name="ParticipantsButton" Content="Участники" Click="ParticipantsButton_Click" Width="200" Height="50" Margin="0,0,0,10"/>
            <Button x:Name="JuryButton" Content="Жюри" Click="JuryButton_Click" Width="200" Height="50" Margin="0,0,0,10"/>
            <Button x:Name="SponsorsButton" Content="Активности" Click="SponsorsButton_Click" Width="200" Height="50" Margin="0,0,0,10"/>
            <Button x:Name="RegisterJuryButton" Content="Регистрация жюри/модератора" Click="RegisterJuryButton_Click" Width="200" Height="50"/>
            <!-- Новая кнопка -->
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock x:Name="PatronymicTextBlock" FontSize="14" Margin="0,0,10,0"/>
            <TextBlock x:Name="ParticipantsTextBlock" FontSize="14" Margin="0,0,10,0"/>
            <TextBlock x:Name="JuryTextBlock" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>