<Window x:Class="EventsWPF_Practic.ActivitiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Активности" Height="400" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView x:Name="ActivitiesListView" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Activities.ActivityName}" />
                    <GridViewColumn Header="День" DisplayMemberBinding="{Binding DayNumber}" />
                    <GridViewColumn Header="Время начала" DisplayMemberBinding="{Binding StartTime, StringFormat={}{0:hh\\:mm}}" />
                    <GridViewColumn Header="Мероприятие ID" DisplayMemberBinding="{Binding EventID}" />
                    <GridViewColumn Header="Модератор ID" DisplayMemberBinding="{Binding ModeratorUserID}" />
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Добавить" Click="AddActivityButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Удалить" Click="DeleteActivityButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>