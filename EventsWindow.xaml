<Window x:Class="EventsWPF_Practic.EventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мероприятия" Height="400" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="EventsListView" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding EventName}" />
                    <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding EventDate}" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Добавить" Click="AddEventButton_Click" Width="100" Margin="0,0,10,0"/>
            <Button Content="Удалить" Click="DeleteEventButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>