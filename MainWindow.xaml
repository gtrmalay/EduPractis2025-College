<Window x:Class="EventsWPF_Practic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Список мероприятий" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Фильтр по направлению:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="DirectionFilter" Width="150" DisplayMemberPath="DirectionName" 
                      SelectionChanged="DirectionFilter_SelectionChanged"/>
            <TextBlock Text="Фильтр по дате:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <DatePicker x:Name="DateFilter" Width="150" SelectedDateChanged="DateFilter_SelectedDateChanged"/>
            <Button x:Name="ClearFiltersButton" Content="Сбросить фильтры" Margin="20,0,0,0" 
                    Click="ClearFiltersButton_Click"/>
        </StackPanel>

        <!-- Список мероприятий -->
        <ListView x:Name="EventsListView" Grid.Row="2" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Логотип" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding PhotoPath}" Width="80" Height="80"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding EventName}"/>
                    <GridViewColumn Header="Направление" Width="150" DisplayMemberBinding="{Binding DirectionName}"/>
                    <GridViewColumn Header="Дата" Width="150" DisplayMemberBinding="{Binding EventDate, StringFormat={}{0:dd.MM.yyyy}}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Кнопка авторизации -->
        <Button x:Name="LoginButton" Grid.Row="3" Content="Авторизация" Width="100" HorizontalAlignment="Right" 
                Click="LoginButton_Click"/>
    </Grid>
</Window>