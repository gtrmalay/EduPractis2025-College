<Window x:Class="EventsWPF_Practic.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя" Height="345" Width="300">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Имя:"/>
            <TextBox x:Name="FirstNameBox" />
            <TextBlock Text="Отчество:" Margin="0,10,0,0"/>
            <TextBox x:Name="PatronymicBox" />
            <TextBlock Text="Фамилия:" Margin="0,10,0,0"/>
            <TextBox x:Name="SurnameBox" />
            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailBox" />
            <TextBlock Text="Телефон:" Margin="0,10,0,0"/>
            <TextBox x:Name="PhoneBox" />
            <TextBlock Text="Дата рождения:" Margin="0,10,0,0"/>
            <DatePicker x:Name="BirthDatePicker" />
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>