<Window x:Class="EventsWPF_Practic.ParticipantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно Участника" Height="400" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Image x:Name="UserPhoto" Width="100" Height="100" Margin="0,0,10,0"/>
            <TextBlock x:Name="GreetingTextBlock" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>

        <ListView x:Name="ActivitiesListView" Grid.Row="1" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Мероприятие" Width="150" DisplayMemberBinding="{Binding EventName}"/>
                    <GridViewColumn Header="День" Width="50" DisplayMemberBinding="{Binding DayNumber}"/>
                    <GridViewColumn Header="Время начала" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StartTime, StringFormat={}{0:HH:mm}, FallbackValue='Не указано'}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="EditProfileButton" Content="Редактировать профиль" Grid.Row="2" Width="150" HorizontalAlignment="Left" Click="EditProfileButton_Click"/>
    </Grid>
</Window>