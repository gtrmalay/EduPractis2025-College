<Window x:Class="EventsWPF_Practic.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="500" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Идентификатор:" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="IdNumberTextBox" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="Пароль:" Grid.Row="2" Margin="0,0,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Margin="0,0,0,10"/>

        <TextBlock Text="CAPTCHA:" Grid.Row="4" Margin="230,0,0,5" Background="Gray"/>
        <Image x:Name="CaptchaImage" Grid.Row="5" Width="70" Height="40" Margin="70,0,0,10"/>
        <TextBox x:Name="CaptchaTextBox" Grid.Row="5" Width="50" Margin="150,0,0,10"/>
        <Button x:Name="RefreshCaptchaButton" Content="Обновить" Grid.Row="5" Width="60" Margin="280,0,0,10" Click="RefreshCaptcha_Click"/>

        <CheckBox x:Name="RememberMeCheckBox" Content="Запомнить меня" Grid.Row="6" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="LoginButton" Content="Войти" Width="100" Margin="0,0,10,0" Click="LoginButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>