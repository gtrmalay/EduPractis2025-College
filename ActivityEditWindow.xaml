<Window x:Class="EventsWPF_Practic.ActivityEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование активности" Height="200" Width="300">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="День:"/>
            <TextBox x:Name="DayNumberBox" />
            <TextBlock Text="Время начала:" Margin="0,10,0,0"/>
            <TextBox x:Name="StartTimeBox" />
            <TextBlock Text="Мероприятие:" Margin="0,10,0,0"/>
            <ComboBox x:Name="EventComboBox" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>